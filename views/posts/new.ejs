<!DOCTYPE html>
<html lang="en">
        <!-- Head partial -->
  <%- include('../partials/head.ejs', { page: "Create Post" } ) %>

<body class="has-navbar-fixed-top">
          <!-- Navbar Partial -->
          <%- include('../partials/nav.ejs', { routes: [
            { 
              href: "/",
              title: "Home",
            },
            {
              href: "/",
              title: "Logout",
            },] } ) %>
  <!--<h2><%= user.username %></h2>  --->
  <section class="hero is-small has-background is-link">
    <div id="hero-container" class="hero-body">
      <div id="title-container">
      <p class="title">CREATE NEW POST</p>
      </div>
    </div>
  </section>

  <div class="post-container" id="created-post" >
    <form class="box" id="created-post" action="/posts" method="POST">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input
            id="create-post-title"
            class="input"
            type="text"
            placeholder="Post Title"
            name="title"
          />
        </div>
      </div>
      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea
            class="create-post-textbox"
            
            rows="12"
            cols="88"
            placeholder="  Post Content"
            name="content">
          </textarea>
          
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <button class="button is-info">Create Post</button>
        </div>
      </div>
    </form>
  </section>
</html>
</body>
                                                  